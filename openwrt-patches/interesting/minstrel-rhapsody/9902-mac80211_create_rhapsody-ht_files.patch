+static inline struct rhapsody_rate_stats *
+rhapsody_get_ratestats(struct rhapsody_ht_sta *ri, int index)
+{
+	return &ri->groups[index / MCS_GROUP_RATES].rates[index % MCS_GROUP_RATES];
+}
